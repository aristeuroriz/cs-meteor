Collections.<%= collectionVarName %> = new Mongo.Collection('<%= collectionName %>', {  idGeneration: 'MONGO' });

Collections.<%= collectionVarName %>.allow({
  insert: () => false,
  update: () => false,
  remove: () => false
});

Collections.<%= collectionVarName %>.deny({
  insert: () => true,
  update: () => true,
  remove: () => true
});

Collections.<%= collectionVarName %>.attachSchema(Schemas.<%= schemaName %>);
